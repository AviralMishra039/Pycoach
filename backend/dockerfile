# ---------- 1. Use official Python image ----------
FROM python:3.11-slim AS backend

# ---------- 2. Set working directory ----------
WORKDIR /app

# ---------- 3. Copy dependency list ----------
COPY backend/requirements.txt /app/backend/requirements.txt

# ---------- 4. Install system dependencies ----------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    sqlite3 \
    libsqlite3-dev \
    && rm -rf /var/lib/apt/lists/*


# ---------- 5. Install Python dependencies ----------
RUN pip install --no-cache-dir -r backend/requirements.txt

# ---------- 6. Copy the backend code ----------
COPY backend /app/backend
COPY course_materials /app/course_materials

# ---------- 7. Copy prebuilt ChromaDB (optional local volume) ----------
# If you have a pre-generated chroma_db folder locally, uncomment next line
# COPY chroma_db /app/chroma_db

# Otherwise, Chroma will initialize a new one automatically on first run.

# ---------- 8. Expose FastAPI port ----------
EXPOSE 8000

# ---------- 9. Set environment variables ----------
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# ---------- 10. Run FastAPI ----------
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
